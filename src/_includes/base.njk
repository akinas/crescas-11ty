<!DOCTYPE html>
<html lang="{{ lang }}" dir="{{ 'rtl' if lang == 'he' else 'ltr' }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/static/favicon.png" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="{{ site.googleFontsUrl[lang] or site.googleFontsUrl.en }}" rel="stylesheet">
  <style>
    :root {
      --font-en-serif: {{ site.fonts.en.serif | safe }};
      --font-en-sans: {{ site.fonts.en.sans | safe }};
      --font-he-serif: {{ site.fonts.he.serif | safe }};
      --font-he-sans: {{ site.fonts.he.sans | safe }};
    }
  </style>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-1YNBEKBG45"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-1YNBEKBG45');
  </script>
</head>
<body>
  <div class="page-wrapper">
    <header class="site-header">
      <div class="container">
        <!-- Top Bar for Language Toggle -->
        <div class="header-top-bar">
          <div class="language-toggle">
            {% set translatedLink = lang | getTranslatedLink %}
            
            <span class="lang-switch-btn {{ 'active' if lang == 'he' }}">
              {% if lang == 'he' %}עב{% else %}<a href="{{ translatedLink }}" class="lang-switch-btn">עב</a>{% endif %}
            </span>
            <span class="lang-separator">|</span>
            <span class="lang-switch-btn {{ 'active' if lang == 'en' }}">
              {% if lang == 'en' %}EN{% else %}<a href="{{ translatedLink }}" class="lang-switch-btn">EN</a>{% endif %}
            </span>
          </div>
        </div>

        <!-- Main Header Area: Title and Nav -->
        <div class="header-inner">
          <div class="site-title">
            <!-- Use language-specific site title -->
            <h1><a href="{{ '/en/' | url if lang == 'en' else '/' | url }}">{{ (site.title[lang] or site.title.en or "Crescas") | markdownInline | safe }}</a></h1>
          </div>
          
          <nav class="main-nav" role="navigation" aria-label="Main navigation">
            <ul class="nav-list">
              {% for item in collections.nav %}
                {% if item.data.lang == lang %}
                  <li class="nav-item">
                    <a href="{{ item.url }}" class="nav-link {{ 'active' if page.url == item.url }}" {% if page.url == item.url %}aria-current="page"{% endif %}>
                      {{ item.data.title }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
              <li class="nav-item">
                <div class="nav-cta-group">
                  {% set defaultLinkKey = site.defaultBuyLink[lang] or "amazon" %}
                  {% set defaultUrl = site.buyLinks[defaultLinkKey] %}
                  <a href="{{ defaultUrl }}" class="nav-cta-main">
                    {% if lang == 'he' %}קנה עכשיו{% else %}Buy Now{% endif %}
                  </a>
                  <button class="nav-cta-arrow" aria-label="{% if lang == 'he' %}אפשרויות רכישה נוספות{% else %}More purchasing options{% endif %}" aria-expanded="false">
                    <svg width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </button>
                  <ul class="nav-cta-dropdown">
                    <li><a href="{{ site.buyLinks.amazon }}">Amazon (US)</a></li>
                    <li><a href="{{ site.buyLinks.israel }}">{% if lang == 'he' %}ישראל (BookPod){% else %}Israel (BookPod){% endif %}</a></li>
                  </ul>
                </div>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <main class="main-content" role="main">
      <div class="container">
        <div class="content-wrapper">
          {{ content | safe }}
        </div>
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <!-- Footer content will go here -->
        </div>
      </div>
    </footer>
    </footer>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const arrowBtn = document.querySelector('.nav-cta-arrow');
      const dropdown = document.querySelector('.nav-cta-dropdown');
      
      if (arrowBtn && dropdown) {
        arrowBtn.addEventListener('click', function(e) {
          e.stopPropagation();
          const expanded = arrowBtn.getAttribute('aria-expanded') === 'true';
          arrowBtn.setAttribute('aria-expanded', !expanded);
          dropdown.classList.toggle('show');
        });

        // Close when clicking outside
        document.addEventListener('click', function(event) {
          if (!arrowBtn.contains(event.target) && !dropdown.contains(event.target)) {
             arrowBtn.setAttribute('aria-expanded', 'false');
             dropdown.classList.remove('show');
          }
        });
        
        // Close on escape key
        document.addEventListener('keydown', function(event) {
          if (event.key === 'Escape') {
             arrowBtn.setAttribute('aria-expanded', 'false');
             dropdown.classList.remove('show');
          }
        });
      }
    });
  </script>
</body>
</html>